{
  "name": "typescript-npm-package-template",
  "version": "0.0.1-0",
  "description": "",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "url": "https://github.com/tktcorporation/typescript-npm-package-template",
    "type": "git"
  },
  "keywords": [
    "query",
    "sql",
    "simple",
    "builder"
  ],
  "author": "tktcorporation <tktcorporation.go@gmail.com>",
  "license": "MIT",
  "engines": {
    "npm": "use yarn instead of npm."
  },
  "homepage": "https://github.com/tktcorporation/typescript-npm-package-template",
  "bugs": "https://github.com/tktcorporation/typescript-npm-package-template/issues",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "yarn build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:internal": "jest src/domain/ && jest src/component/",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "25.1.4",
    "@types/node": "^13.9.1",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "src(.*)$": "<rootDir>/src/$1"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
